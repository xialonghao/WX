/* pages/dz_3/dz_3.wxss */
/*信息 外  */
.teacher-info {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding-top:30rpx;
  box-sizing: border-box;
} 
/*头像图片  */
.te-img {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-bottom: 90rpx;
}
/*内容标题  */
.te-title {
  padding-top:10rpx; 
}
/*文本框   */
.te-val {
  border:1px solid #8c8c8c;
  border-radius:4px;
  padding:5rpx 15rpx;
  color:#343434;
  margin-left: 30rpx; 
}
/*长文本框   */
.te-long-width {
  width:320rpx;
}
/*短文本框   */
.te-short-width {
  width:247rpx;
}
/*行  */
.te-row {
  flex-direction:row;
  display: flex;
  justify-content: space-between;
  margin-bottom:40rpx;
position:relative;
}
.te-row:nth-of-type(5) {
  margin-bottom:20rpx;
}
/*性别 行 */
.te-sex-row {
  flex-direction:row;
  display: flex;
  margin-bottom:40rpx;
}
/*性别 选项  */
.te-sex-radio {
  margin:3rpx 30rpx 0 26rpx;
}
.addclassimg{
  width:50rpx;
  height: 50rpx;
  right: -75rpx;
  top: 6rpx;
  position: absolute;
}
.te-row:nth-of-type(6),.te-row:nth-of-type(7),.te-row:nth-of-type(8),.te-row:nth-of-type(9),.te-row:nth-of-type(10),.te-row:nth-of-type(11),.te-row:nth-of-type(12),.te-row:nth-of-type(13)  {
  margin-bottom:20rpx;
  width:462rpx;
  clear: both;
}
.te-row:nth-of-type(6) picker,.te-row:nth-of-type(7) picker,.te-row:nth-of-type(8) picker,.te-row:nth-of-type(9) picker,.te-row:nth-of-type(10) picker,.te-row:nth-of-type(11) picker,.te-row:nth-of-type(12) picker,.te-row:nth-of-type(13) picker{
  float: right;
  margin-left: 155rpx;

}
