/*容器*/
.container {
  padding:0;
  width:100%;
}
.table {
  border:2px solid green;
  border-right: 0;
  border-bottom: 0;
  width: 95%;
  margin-top:40rpx;
}
.table1 {
  border:2px solid red;
  border-right: 0;
  border-bottom: 0;
  width: 95%;
  margin-top:40rpx;
}
.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.td {
  padding: 7px;
  border-bottom: 1px solid green;
  border-right: 1px solid green;
  text-align: center;
  width:100%;
  font-size: 33rpx;
}
.td1 {
  padding: 7px;
  border-bottom: 1px solid red;
  border-right: 1px solid red;
  text-align: center;
  width:100%;
  font-size: 33rpx;
}
.table .tr:nth-of-type(1) .td:nth-of-type(1),.table .tr:nth-of-type(1) .td:nth-of-type(2),.table1 .tr:nth-of-type(1) .td:nth-of-type(1),.table1 .tr:nth-of-type(1) .td:nth-of-type(2),{
  line-height: 70rpx;
}
.table .tr:nth-last-of-type(1) .td{
    border-bottom: 2px solid green;
}
.table1 .tr:nth-last-of-type(1) .td1{
    border-bottom: 2px solid red;
}
.table .tr:nth-of-type(1) .td:nth-last-of-type(1),.table .tr:nth-of-type(2) .td:nth-of-type(1){
     border-right: 2px solid green;
}
.table1 .tr:nth-of-type(1) .td1:nth-last-of-type(1),.table1 .tr:nth-of-type(2) .td1:nth-of-type(1){
     border-right: 2px solid red;
}


