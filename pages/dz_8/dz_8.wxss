/* pages/dz_8/dz_8.wxss */
.container{
  padding:0;
}
/*回家 外  */
.go-home-wrap {
  height: 100%;
  margin:30rpx 10rpx 0;
  border-top: 1px solid #dadada;
  border-left: 1px solid #dadada;
}
/*回家 行 */
.go-home-tr {
  flex-direction:row;
  display: flex;
}
.go-home-tr:nth-child(odd) {
  background: #f3f3f3;
}
.go-home-tr:last-child .go-home-row{
  border:none;
}
/*回家 列  */
.go-home-row {
  width: 50%;
  line-height:35px;
  text-align:center;
  border-right: 1px solid #dadada;
  border-bottom:1px solid #dadada;
  font-size:33rpx;
}
/*回家 表头 列 加粗  */
.th {
  font-weight:bold;
  font-size:35rpx;
}







/*回家 分页 */
.go-home-page {
  flex-direction:row;
  display: flex;
  justify-content:space-between;
  padding:60rpx 140rpx 0; 
}
/*分页按钮  */
.button-page {
  width: 40%;
  border:1px solid #000;
  text-align:center;
  line-height:30px;
}

/*分页*/
.page {
  display: flex;
  justify-content: space-between;
  width:80%;
  
}
button {
  font-size: 15px;
  margin-top: 20px;
  margin-bottom: 20px;
  width:700rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.page {
  font-size: 15px;
  margin-top: 20px;
  margin-bottom: 20px;
  padding-left:40rpx;
  padding-right:40rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.search-wrap{
  width:75%;
  margin: 15px auto ;
  height: 60rpx;
  position: relative;
}
.search-inpulong{
  border-bottom:1px solid #ccc;
  height: 100%;
  width:97%;
  float: left;
  font-size: 30rpx;
  padding-left:3%;
  transition:100ms ease-in-out;
  position: absolute;
}
.search-inputshort{
  border-bottom:1px solid #ccc;
  height: 100%;
  box-shadow: 0 0 3px 1px #000;
  width:70%;
  float: left;
  font-size: 30rpx;
  padding-left:3%;
  transition:100ms ease-in-out;
   position: absolute;

}
.search-button{
  background: none;
  border: none;
  color: #000;
  float: right;
  border-radius: 0;
  margin: 0;
  width:27%;
  height: 100%;
  transition:100ms ease-in-out;
  display: none;
}
button::after{
  content: none;
}
.pagenum{
  margin-top: 20px;
  line-height: 2.55555556;
}
